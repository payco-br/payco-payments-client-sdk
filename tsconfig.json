{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "dist",
		"emitDeclarationOnly": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["**/*.spec.ts"]
}